<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="stylesheets/nav.css" type="text/css">
    <link rel="stylesheet" href="stylesheets/simulations.css" type="text/css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  </head>
  <body>
    <%- navbar %>
    <div class="simulations">
        <div class="page-title">
            <h1>Simulations</h1>
        </div>
        <div class="sim-items">
            <% for (var i = 0; i < simulations.length; i++){ %>
            <div class="sim-item" onclick="window.open('/simulations/<%= simulations[i].urlName %>', '_blank')" style="cursor: pointer;">
                <div class="sim-img">
                  <% if(simulations[i].image){ %>
                    <img src="images/<%= simulations[i].image %>" alt="img">
                    <% } else{ %>
                    <img src="images/default.png">
                    <% } %>
                </div>
                <div class="sim-title">
                    <h4><%= simulations[i].name %></h4>
                </div>
                <div class="sim-description">
                    <p></i><%= simulations[i].description %></i></p>
                </div>
            </div>
            <% } %>
        </div>

    </div>

    

  </body>
</html>
